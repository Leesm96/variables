{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["vitest/globals", "node"],
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": ["backend/**/*", "tests/**/*", "frontend/**/*", "**/*.ts", "**/*.tsx"]
}
